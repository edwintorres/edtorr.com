
<!-- RECENT POST -->
{% set localizedPosts = collections.posts | byLocale(locale) %}
{% set postslist = localizedPosts | head(-3) %}
{% set postslistCounter = localizedPosts | length %}
{% set maxPosts = postslistCounter | min(3) %}
<div class="widget mt-4 pb-2">
    <h5 class="widget-title">{{ collections.t[locale].recentPosts }}</h5>
    <div class="mt-3">
    {% for post in postslist | reverse %}

    <div class="clearfix post-recent">
        <div class="post-recent-thumb float-start"> <a href="{{ post.url | url }}"> 
            {# <img alt="img" src="/images/blog/08.jpg" class="img-fluid rounded"> #}
            
            {% img 
                input = post.data.headerImage | url,
                width = 736,
                alt = post.data.headerImageAlt,
                className = "img-fluid rounded"
            %}
            
            </a></div>
        <div class="post-recent-content float-start"><a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a><span class="text-muted mt-2">{{ post.date | readableDate }}</span></div>
    </div>

    {% endfor %}

    </div>
</div>
